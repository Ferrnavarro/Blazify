

<div class="list-page">
    <div style="background-image: url('@ImageUrl')" class="list-page__image" />
    <button  class="share-link ion-android-share-alt" />
    <h1 class="list-page__title">@Title</h1>
    <div class="list-page__content">
        <div class="list-page__list">@ChildContent</div>
    </div>
</div>

@code {
    [Parameter]
    public RenderFragment ChildContent { get; set; }

    [Parameter]
    public string Title { get; set; }

    [Parameter]
    public string ImageUrl { get; set; }

}
